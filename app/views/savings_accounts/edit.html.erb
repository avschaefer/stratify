<div class="page-header mb-4">
  <h1>Edit Account</h1>
  <p class="text-muted mb-0">Modify your account details</p>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: @account, local: true do |f| %>
      <% if @account.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h5>
          <ul>
            <% @account.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :name, "Account Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :account_type, "Account Type", class: "form-label" %>
            <%= f.select :account_type, options_for_select([
              ['Savings', 'savings'],
              ['Checking', 'checking'],
              ['Credit Card', 'credit_card']
            ], @account.account_type), {}, { class: "form-select", required: true } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="mb-3">
            <%= f.label :notes, "Notes (optional)", class: "form-label" %>
            <%= f.text_area :notes, class: "form-control", rows: 2 %>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-end gap-2">
        <%= link_to "Cancel", savings_accounts_path, class: "btn btn-secondary" %>
        <%= f.submit "Update Account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

