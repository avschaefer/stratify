<div class="page-header mb-4">
  <h1>Edit Retirement Scenario</h1>
  <p class="text-muted mb-0">Update your retirement planning scenario</p>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: @retirement, local: true do |f| %>
      <% if @retirement.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @retirement.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :name, "Scenario Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :target_date, "Target Retirement Date", class: "form-label" %>
            <%= f.date_field :target_date, class: "form-control", required: true %>
            <small class="form-text text-muted">Future dollars</small>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :target_amount, "Total Goal", class: "form-label" %>
            <%= f.number_field :target_amount, step: 0.01, class: "form-control", required: true %>
            <small class="form-text text-muted">Future dollars</small>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :current_savings, "Current Savings", class: "form-label" %>
            <%= f.number_field :current_savings, step: 0.01, class: "form-control", required: true %>
            <small class="form-text text-muted">Today's dollars</small>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :monthly_contribution, "Monthly Contribution", class: "form-label" %>
            <%= f.number_field :monthly_contribution, step: 0.01, class: "form-control", required: true %>
            <small class="form-text text-muted">Today's dollars</small>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :expected_return_rate, "Expected Return Rate (%)", class: "form-label" %>
            <%= f.number_field :expected_return_rate, step: 0.01, class: "form-control", required: true %>
          </div>
        </div>
      </div>
      
      <div class="d-flex justify-content-end gap-2">
        <%= link_to "Cancel", retirements_path, class: "btn btn-secondary" %>
        <%= f.submit "Update Scenario", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

