<div class="space-y-6 animate-fade-in" data-controller="dashboard-charts" data-dashboard-charts-allocation-data-value="<%= @asset_allocation.to_json %>">
  
  <!-- Top Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Net Worth -->
    <%= ui_card class: "p-5" do %>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">Net Worth</p>
          <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(@net_worth, precision: 0) %></h3>
        </div>
      </div>
      <div class="mt-3 flex items-center text-sm">
        <span class="text-emerald-600 font-medium flex items-center">
          <%= @net_worth_trend %>%
        </span>
        <span class="text-gray-400 ml-2">vs last month</span>
      </div>
    <% end %>

    <!-- Total Assets -->
    <%= ui_card class: "p-5" do %>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">Total Assets</p>
          <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(@total_assets, precision: 0) %></h3>
        </div>
      </div>
      <div class="mt-3 flex items-center text-sm">
        <span class="<%= @assets_trend.to_f >= 0 ? 'text-emerald-600' : 'text-red-600' %> font-medium flex items-center">
          <%= @assets_trend %>%
        </span>
        <span class="text-gray-400 ml-2">vs last month</span>
      </div>
    <% end %>

    <!-- Liabilities -->
    <%= ui_card class: "p-5" do %>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">Liabilities</p>
          <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(@total_liabilities, precision: 0) %></h3>
        </div>
      </div>
      <div class="mt-3 flex items-center text-sm">
         <span class="<%= @liabilities_trend.to_f <= 0 ? 'text-emerald-600' : 'text-red-600' %> font-medium flex items-center">
          <%= @liabilities_trend %>%
        </span>
        <span class="text-gray-400 ml-2">vs last month</span>
      </div>
    <% end %>

    <!-- Monthly Savings -->
    <%= ui_card class: "p-5" do %>
      <div class="flex justify-between items-start">
        <div>
          <p class="text-sm font-medium text-gray-500">Monthly Savings</p>
          <h3 class="text-2xl font-bold text-gray-900 mt-1"><%= number_to_currency(@monthly_savings, precision: 0) %></h3>
        </div>
      </div>
      <div class="mt-3 flex items-center text-sm">
        <span class="text-emerald-600 font-medium flex items-center">
          +12%
        </span>
        <span class="text-gray-400 ml-2">vs last month</span>
      </div>
    <% end %>
  </div>

  <!-- Net Worth Chart (Full Width) -->
  <%= ui_card class: "p-6" do %>
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-lg font-semibold text-gray-900">Net Worth Growth</h2>
      <div class="flex gap-2">
        <% ['1M', '3M', '6M', '1Y', 'ALL'].each do |period| %>
          <button class="px-3 py-1 text-xs font-medium rounded-full <%= period == '1Y' ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-100' %>">
            <%= period %>
          </button>
        <% end %>
      </div>
    </div>
    <div class="h-72 relative">
      <canvas data-dashboard-charts-target="netWorthChart"></canvas>
    </div>
  <% end %>

  <!-- Asset Allocation (Full Width) -->
  <%= ui_card class: "p-6" do %>
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Asset Allocation</h2>
    <div class="h-64 relative">
      <canvas data-dashboard-charts-target="allocationChart"></canvas>
    </div>
  <% end %>

  <!-- Monthly Cash Flow Chart (Full Width) -->
  <%= ui_card class: "p-6" do %>
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-lg font-semibold text-gray-900">Monthly Cash Flow</h2>
    </div>
    <div class="h-64 relative">
       <canvas data-dashboard-charts-target="cashFlowChart"></canvas>
    </div>
  <% end %>

</div>
