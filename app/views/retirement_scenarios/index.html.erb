<div class="page-header d-flex justify-content-between align-items-start mb-4">
  <div>
    <h1>Retirement Planning</h1>
    <p class="text-muted mb-0">Plan and model your retirement scenarios</p>
  </div>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newScenarioModal">
    <i class="bi bi-plus-circle"></i> New Scenario
  </button>
</div>

<!-- Summary Metrics Tile -->
<div class="card mb-4">
  <div class="card-body">
    <div class="metrics-grid">
      <!-- Row 1: Target Amount -->
      <div class="metric-tile">
        <div class="metric-label">Target Amount</div>
        <div class="metric-value">$<%= number_with_delimiter(@goal_amount.round(0)) %></div>
        <div class="metric-subtext">By age <%= @target_age %></div>
      </div>
      
      <!-- Saved Amount/% Complete -->
      <div class="metric-tile">
        <div class="metric-label">Saved Amount</div>
        <div class="metric-value">$<%= number_with_delimiter(@saved_amount.round(0)) %></div>
        <div class="metric-subtext"><%= @current_progress.round(0) %>% complete</div>
      </div>
      
      <!-- Gap to Goal -->
      <div class="metric-tile">
        <div class="metric-label">Gap to Goal</div>
        <div class="metric-value" style="color: <%= @gap_to_goal >= 0 ? '#059669' : '#dc2626' %>;">
          $<%= number_with_delimiter(@gap_to_goal.abs.round(0)) %>
        </div>
        <div class="metric-subtext"><%= @gap_to_goal >= 0 ? 'Surplus' : 'Remaining' %></div>
      </div>
      
      <!-- Years to Goal -->
      <div class="metric-tile">
        <div class="metric-label">Years to Goal</div>
        <div class="metric-value"><%= @years_to_goal %></div>
        <div class="metric-subtext">Until retirement</div>
      </div>
      
      <!-- Row 2: Projected Value -->
      <div class="metric-tile">
        <div class="metric-label">Projected Value</div>
        <div class="metric-value" style="color: #059669;">
          $<%= number_with_delimiter(@projected_value.round(0)) %>
        </div>
        <div class="metric-subtext">At retirement</div>
      </div>
      
      <!-- Monthly Contribution Actual -->
      <div class="metric-tile">
        <div class="metric-label">Monthly Contribution</div>
        <div class="metric-value">$<%= number_with_delimiter(@monthly_contribution_actual.round(0)) %></div>
        <div class="metric-subtext">Current actual</div>
      </div>
      
      <!-- Monthly Contribution Required -->
      <div class="metric-tile">
        <div class="metric-label">Monthly Contribution</div>
        <div class="metric-value">$<%= number_with_delimiter(@monthly_contribution_needed.round(0)) %></div>
        <div class="metric-subtext">Required</div>
      </div>
      
      <!-- Annual Withdrawal -->
      <div class="metric-tile">
        <div class="metric-label">Annual Withdrawal</div>
        <div class="metric-value">$<%= number_with_delimiter(@annual_withdrawal.round(0)) %></div>
        <div class="metric-subtext">Planned withdrawal</div>
      </div>
    </div>
  </div>
</div>

<!-- Retirement Savings Chart -->
<div class="card mb-4">
  <div class="card-body">
    <div class="mb-3">
      <h2 class="mb-1" style="font-size: 1.25rem; font-weight: 600; color: #1e293b;">Retirement Savings Over Time</h2>
      <p class="text-muted mb-0" style="font-size: 0.875rem;">Track your retirement savings projections</p>
    </div>
    
    <!-- Chart container - isolated at top -->
    <div id="retirementChartContainer" style="position: relative; width: 100%; height: 400px; overflow: hidden; background: white; margin-bottom: 1rem;">
      <div id="retirementChart" style="width: 100%; height: 100%; position: absolute; top: 0; left: 0;"></div>
    </div>
    
    <!-- Controls below chart -->
    <div class="chart-controls-container">
      <!-- Series Group -->
      <div class="chart-control-group">
        <label class="chart-control-label">Series</label>
        <div class="chart-button-group">
          <button type="button" class="chart-button-toggle active" data-series="actual_savings" id="btnActualSavings">
            Actual Savings
          </button>
          <button type="button" class="chart-button-toggle active" data-series="projected_savings" id="btnProjectedSavings">
            Projected Savings
          </button>
          <button type="button" class="chart-button-toggle active" data-series="target_savings" id="btnTargetSavings">
            Target Savings
          </button>
        </div>
      </div>
      
      <!-- Chart Type Group -->
      <div class="chart-control-group">
        <label class="chart-control-label">Chart Type</label>
        <div class="chart-button-group">
          <button type="button" class="chart-button-toggle active" data-chart-type="area" id="btnRetirementArea">
            Area
          </button>
          <button type="button" class="chart-button-toggle" data-chart-type="line" id="btnRetirementLine">
            Line
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mb-3">
  <h2 style="font-size: 1.25rem; font-weight: 600; color: #1e293b;">Your Scenarios</h2>
</div>

<div class="row">
  <% if @scenarios.any? %>
    <% @scenarios.each do |scenario| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body position-relative d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <h5 class="mb-0"><%= scenario.name %></h5>
              <% if scenario.active == true %>
                <span class="badge" style="background-color: #f0fdfa; color: #0d9488;">Active</span>
              <% end %>
            </div>
            
            <div class="mb-3 flex-grow-1">
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Target Retirement:</span>
                <strong><%= (scenario.target_date rescue Date.today).year %></strong>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Yearly Withdrawal:</span>
                <strong>$<%= number_with_delimiter((scenario.yearly_withdrawal rescue 0).round(0)) %></strong>
              </div>
              <div class="d-flex justify-content-between mb-3">
                <span class="text-muted">Total Goal:</span>
                <strong>$<%= number_with_delimiter((scenario.target_amount rescue 0).round(0)) %></strong>
              </div>
              
              <div class="mb-2">
                <div class="d-flex justify-content-between mb-1">
                  <span>Progress</span>
                  <span><%= (scenario.progress_percentage rescue 0).round(0) %>% complete</span>
                </div>
                <div class="progress" style="height: 25px;">
                  <div class="progress-bar bg-primary" role="progressbar" style="width: <%= [(scenario.progress_percentage rescue 0), 100].min %>%">
                    <%= (scenario.progress_percentage rescue 0).round(0) %>%
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mt-auto pt-3 border-top">
              <div class="d-flex gap-2 align-items-center">
                <% if scenario.active != true %>
                  <%= form_with url: set_active_retirement_scenario_path(scenario), method: :post, local: true, class: "flex-grow-1" do |f| %>
                    <%= f.submit "Set as Active", class: "btn btn-primary w-100" %>
                  <% end %>
                <% else %>
                  <button class="btn btn-primary flex-grow-1" disabled>Currently Active</button>
                <% end %>
                <%= link_to "#", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                    class: "btn btn-sm btn-outline-danger d-flex align-items-center justify-content-center" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <p class="text-muted text-center py-5">No scenarios saved yet. Click "New Scenario" to get started.</p>
    </div>
  <% end %>
</div>

<!-- Guide Section -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Guide</h5>
  </div>
  <div class="card-body">
    <h6 class="mb-3">Understanding Retirement Planning Terms</h6>
    <div class="mb-3">
      <strong>Dollar Values:</strong>
      <ul class="mb-0 mt-2">
        <li><strong>Today's Dollars:</strong> Values adjusted for inflation, representing purchasing power in today's terms. Examples include:
          <ul>
            <li><strong>Yearly Withdrawal:</strong> Enter the amount you want to withdraw annually in today's purchasing power (e.g., $50,000 today)</li>
            <li><strong>Current Savings:</strong> Your current retirement savings balance</li>
            <li><strong>Monthly Contribution:</strong> How much you're saving each month</li>
          </ul>
        </li>
        <li><strong>Future Dollars:</strong> Values that account for inflation over time. Examples include:
          <ul>
            <li><strong>Target Retirement Amount:</strong> The total amount needed at retirement, accounting for inflation (e.g., $2,000,000 in future dollars)</li>
            <li><strong>Target Retirement Date:</strong> The year you plan to retire</li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="mb-3">
      <strong>Key Concepts:</strong>
      <ul class="mb-0 mt-2">
        <li><strong>Expected Return Rate:</strong> The annual percentage return you expect on your investments (typically 5-8% for balanced portfolios)</li>
        <li><strong>Progress:</strong> Percentage of your retirement goal you've already saved</li>
        <li><strong>Active Scenario:</strong> The scenario that determines what's shown in the summary cards above</li>
      </ul>
    </div>
    <div class="alert mb-0" style="background-color: var(--active-bg); border-color: var(--primary-color); color: var(--primary-color);">
      <small><strong>Tip:</strong> When entering your yearly withdrawal amount, think about what you'd need today. The calculator will automatically adjust for inflation to show you how much you'll need in future dollars.</small>
    </div>
  </div>
</div>

<!-- New Scenario Modal -->
<div class="modal fade" id="newScenarioModal" tabindex="-1" aria-labelledby="newScenarioModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newScenarioModalLabel">New Retirement Scenario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @scenario, local: true do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :name, "Scenario Name", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :target_date, "Target Retirement Date", class: "form-label" %>
                <%= f.date_field :target_date, class: "form-control", required: true %>
                <small class="form-text text-muted">Future dollars</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :target_amount, "Total Goal", class: "form-label" %>
                <%= f.number_field :target_amount, step: 0.01, class: "form-control", required: true %>
                <small class="form-text text-muted">Future dollars</small>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :current_savings, "Current Savings", class: "form-label" %>
                <%= f.number_field :current_savings, step: 0.01, class: "form-control", required: true %>
                <small class="form-text text-muted">Today's dollars</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :monthly_contribution, "Monthly Contribution", class: "form-label" %>
                <%= f.number_field :monthly_contribution, step: 0.01, class: "form-control", required: true %>
                <small class="form-text text-muted">Today's dollars</small>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :expected_return_rate, "Expected Return Rate (%)", class: "form-label" %>
                <%= f.number_field :expected_return_rate, step: 0.01, value: 7, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :yearly_withdrawal, "Yearly Withdrawal", class: "form-label" %>
                <%= f.number_field :yearly_withdrawal, step: 0.01, class: "form-control" %>
                <small class="form-text text-muted">Today's dollars</small>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Save Scenario", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  let chartInstance = null;
  let allSeries = {};
  let allData = {};
  
  const currentSettings = {
    chartType: 'area',
    visibleSeries: {
      actual_savings: true,
      projected_savings: true,
      target_savings: true
    }
  };

  function initChart() {
    const container = document.getElementById('retirementChart');
    const containerRect = document.getElementById('retirementChartContainer');
    
    if (!container || !containerRect) {
      console.log('Chart container not found, retrying...');
      setTimeout(initChart, 100);
      return;
    }

    if (!window.LightweightCharts) {
      console.log('Waiting for Lightweight Charts...');
      setTimeout(initChart, 100);
      return;
    }

    const { createChart } = window.LightweightCharts;
    const AreaSeries = window.LightweightCharts.AreaSeries;
    const LineSeries = window.LightweightCharts.LineSeries;
    
    if (!createChart || typeof createChart !== 'function') {
      console.error('createChart not available', window.LightweightCharts);
      setTimeout(initChart, 100);
      return;
    }

    try {
      const chart = createChart(container, {
        width: containerRect.clientWidth,
        height: containerRect.clientHeight,
        layout: {
          background: { color: '#ffffff' },
          textColor: '#1e293b'
        },
        grid: {
          vertLines: { color: '#e2e8f0' },
          horzLines: { color: '#e2e8f0' }
        }
      });

      // Fetch data from backend
      fetch('/retirement_scenarios/chart_data', {
        headers: { 'Accept': 'application/json' },
        cache: 'no-cache'
      })
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}`);
        }
        return response.json();
      })
      .then(chartData => {
        // Validate data structure
        if (!chartData || 
            !Array.isArray(chartData.actual_savings) || 
            !Array.isArray(chartData.projected_savings) || 
            !Array.isArray(chartData.target_savings) ||
            chartData.actual_savings.length === 0) {
          throw new Error('Invalid data structure');
        }
        
        allData = chartData;

        // Create series configuration
        const seriesConfig = {
          actual_savings: {
            title: 'Actual Savings',
            lineColor: '#0d9488',
            topColor: 'rgba(13,148,136,0.2)',
            bottomColor: 'rgba(13,148,136,0)',
            color: '#0d9488'
          },
          projected_savings: {
            title: 'Projected Savings',
            lineColor: '#3b82f6',
            topColor: 'rgba(59,130,246,0.2)',
            bottomColor: 'rgba(59,130,246,0)',
            color: '#3b82f6',
            lineStyle: 2 // Dashed line
          },
          target_savings: {
            title: 'Target Savings',
            lineColor: '#8b5cf6',
            topColor: 'rgba(139,92,246,0.2)',
            bottomColor: 'rgba(139,92,246,0)',
            color: '#8b5cf6'
          }
        };

        // Helper function to create series
        function createSeries(type, name, config) {
          if (type === 'area') {
            if (typeof chart.addAreaSeries === 'function') {
              const options = {
                lineColor: config.lineColor,
                topColor: config.topColor,
                bottomColor: config.bottomColor,
                lineWidth: 2
              };
              if (config.lineStyle !== undefined) {
                options.lineStyle = config.lineStyle;
              }
              return chart.addAreaSeries(options);
            } else if (AreaSeries && typeof chart.addSeries === 'function') {
              const options = {
                lineColor: config.lineColor,
                topColor: config.topColor,
                bottomColor: config.bottomColor,
                lineWidth: 2
              };
              if (config.lineStyle !== undefined) {
                options.lineStyle = config.lineStyle;
              }
              return chart.addSeries(AreaSeries, options);
            }
          } else {
            if (typeof chart.addLineSeries === 'function') {
              const options = {
                color: config.color,
                lineWidth: 2
              };
              if (config.lineStyle !== undefined) {
                options.lineStyle = config.lineStyle;
              }
              return chart.addLineSeries(options);
            } else if (LineSeries && typeof chart.addSeries === 'function') {
              const options = {
                color: config.color,
                lineWidth: 2
              };
              if (config.lineStyle !== undefined) {
                options.lineStyle = config.lineStyle;
              }
              return chart.addSeries(LineSeries, options);
            }
          }
          return null;
        }

        // Create all series
        Object.keys(seriesConfig).forEach(name => {
          const series = createSeries(currentSettings.chartType, name, seriesConfig[name]);
          if (series) {
            allSeries[name] = series;
          }
        });

        // Set data and visibility
        const seriesNames = ['actual_savings', 'projected_savings', 'target_savings'];
        const todayTimestamp = chartData.today_timestamp || Math.floor(Date.now() / 1000);
        
        seriesNames.forEach((name) => {
          const series = allSeries[name];
          if (!series) return;
          
          const isVisible = currentSettings.visibleSeries[name];
          
          if (isVisible && allData[name] && allData[name].length > 0) {
            let formattedData;
            
            if (name === 'actual_savings') {
              // Actual savings: historical data up to today (solid)
              formattedData = allData[name].map(point => ({
                time: point.time,
                value: Number(point.value)
              }));
            } else if (name === 'projected_savings') {
              // Projected savings: from today forward (dashed)
              // Include today's point to connect with actual
              formattedData = [
                { time: todayTimestamp, value: allData.actual_savings[allData.actual_savings.length - 1].value },
                ...allData[name].map(point => ({
                  time: point.time,
                  value: Number(point.value)
                }))
              ];
            } else {
              // Target savings: from today forward
              formattedData = [
                { time: todayTimestamp, value: allData.actual_savings[allData.actual_savings.length - 1].value },
                ...allData[name].map(point => ({
                  time: point.time,
                  value: Number(point.value)
                }))
              ];
            }
            
            series.setData(formattedData);
            series.applyOptions({ visible: true });
          } else {
            series.applyOptions({ visible: false });
          }
        });

        // Fit content
        chart.timeScale().fitContent();

        // Handle resize
        const resizeObserver = new ResizeObserver((entries) => {
          for (const entry of entries) {
            const { width, height } = entry.contentRect;
            if (width > 0 && height > 0) {
              chart.resize(width, height);
            }
          }
        });
        resizeObserver.observe(containerRect);

        // Store references
        chartInstance = chart;
        window._retirementChart = chart;
        window._retirementResizeObserver = resizeObserver;
        
        // Setup control event listeners
        setupControls(chart);
        
      })
      .catch(error => {
        console.error('Error loading chart data:', error);
        container.innerHTML = '<p class="text-muted text-center py-5">Chart data failed to load</p>';
      });
      
    } catch (error) {
      console.error('Error initializing chart:', error);
      container.innerHTML = '<p class="text-muted text-center py-5">Chart initialization failed: ' + error.message + '</p>';
    }
  }

  // Update chart based on current settings
  function updateChart() {
    if (!chartInstance) return;

    const seriesNames = ['actual_savings', 'projected_savings', 'target_savings'];
    const todayTimestamp = allData.today_timestamp || Math.floor(Date.now() / 1000);
    
    // Update series visibility based on settings
    seriesNames.forEach((name) => {
      const series = allSeries[name];
      if (!series) return;

      const isVisible = currentSettings.visibleSeries[name];
      series.applyOptions({ visible: isVisible });
      
      // If making visible and data exists, ensure data is set
      if (isVisible && allData[name] && allData[name].length > 0) {
        let formattedData;
        
        if (name === 'actual_savings') {
          // Actual savings: historical data up to today (solid)
          formattedData = allData[name].map(point => ({
            time: point.time,
            value: Number(point.value)
          }));
        } else if (name === 'projected_savings') {
          // Projected savings: from today forward (dashed)
          // Include today's point to connect with actual
          formattedData = [
            { time: todayTimestamp, value: allData.actual_savings[allData.actual_savings.length - 1].value },
            ...allData[name].map(point => ({
              time: point.time,
              value: Number(point.value)
            }))
          ];
        } else {
          // Target savings: from today forward
          formattedData = [
            { time: todayTimestamp, value: allData.actual_savings[allData.actual_savings.length - 1].value },
            ...allData[name].map(point => ({
              time: point.time,
              value: Number(point.value)
            }))
          ];
        }
        
        series.setData(formattedData);
      }
    });

    // Fit content after update
    chartInstance.timeScale().fitContent();
  }

  // Setup control event listeners
  function setupControls(chart) {
    // Series toggle buttons - only for retirement chart
    const chartCard = document.querySelector('#retirementChartContainer').closest('.card');
    if (!chartCard) return;
    
    chartCard.querySelectorAll('.chart-button-toggle[data-series]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const seriesName = e.target.dataset.series;
        const isActive = e.target.classList.contains('active');
        
        // Toggle active state
        e.target.classList.toggle('active');
        currentSettings.visibleSeries[seriesName] = !isActive;
        updateChart();
      });
    });

    // Chart type buttons - only for retirement chart
    chartCard.querySelectorAll('.chart-button-toggle[data-chart-type]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const chartType = e.target.dataset.chartType;
        
        // Remove active from all chart type buttons in this container
        chartCard.querySelectorAll('.chart-button-toggle[data-chart-type]').forEach(b => {
          b.classList.remove('active');
        });
        
        // Add active to clicked button
        e.target.classList.add('active');
        
        currentSettings.chartType = chartType;
        recreateSeries(chart);
      });
    });
  }

  // Recreate series when chart type changes
  function recreateSeries(chart) {
    const seriesConfig = {
      actual_savings: {
        title: 'Actual Savings',
        lineColor: '#0d9488',
        topColor: 'rgba(13,148,136,0.2)',
        bottomColor: 'rgba(13,148,136,0)',
        color: '#0d9488'
      },
      projected_savings: {
        title: 'Projected Savings',
        lineColor: '#3b82f6',
        topColor: 'rgba(59,130,246,0.2)',
        bottomColor: 'rgba(59,130,246,0)',
        color: '#3b82f6',
        lineStyle: 2 // Dashed line
      },
      target_savings: {
        title: 'Target Savings',
        lineColor: '#8b5cf6',
        topColor: 'rgba(139,92,246,0.2)',
        bottomColor: 'rgba(139,92,246,0)',
        color: '#8b5cf6'
      }
    };

    const AreaSeries = window.LightweightCharts.AreaSeries;
    const LineSeries = window.LightweightCharts.LineSeries;

    // Remove existing series
    Object.values(allSeries).forEach(series => {
      try {
        chart.removeSeries(series);
      } catch (e) {
        console.error('Error removing series:', e);
      }
    });

    allSeries = {};

    // Create new series with correct type
    Object.keys(seriesConfig).forEach(name => {
      let series;
      if (currentSettings.chartType === 'area') {
        if (AreaSeries && typeof chart.addSeries === 'function') {
          const options = {
            lineColor: seriesConfig[name].lineColor,
            topColor: seriesConfig[name].topColor,
