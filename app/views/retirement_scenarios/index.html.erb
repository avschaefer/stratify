      </div>
      <div class="modal-body">
        <%= form_with model: @scenario, local: true do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :name, "Scenario Name", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :target_date, "Target Retirement Date", class: "form-label" %>
                <%= f.date_field :target_date, class: "form-control", required: true %>
