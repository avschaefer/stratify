        <h2 class="text-xl font-bold text-gray-900">Retirement Savings Over Time</h2>
        <p class="text-muted mb-0 text-sm mt-1">Track your retirement savings projections</p>
      </div>
      <!-- Card: Bottom Section (Chart) -->
      <div class="p-6">
        <div id="retirementChartContainer" style="position: relative; width: 100%; height: 400px; overflow: hidden; background: white; margin-bottom: 1rem;">
          <div id="retirementChart" style="width: 100%; height: 100%; position: absolute; top: 0; left: 0;"></div>
        </div>
        
        <!-- Controls below chart -->
        <div class="chart-controls-container">
          <!-- Series Group -->
          <div class="chart-control-group">
            <label class="chart-control-label">Series</label>
            <div class="chart-button-group">
              <button type="button" class="chart-button-toggle active" data-series="projected_savings" data-chart-id="retirement">
                Projected Savings
              </button>
              <button type="button" class="chart-button-toggle active" data-series="target_savings" data-chart-id="retirement">
                Target Savings
              </button>
            </div>
          </div>
          
          <!-- Chart Type Group -->
          <div class="chart-control-group">
            <label class="chart-control-label">Chart Type</label>
            <div class="chart-button-group">
              <button type="button" class="chart-button-toggle active" data-chart-type="area" data-chart-id="retirement">
                Area
              </button>
              <button type="button" class="chart-button-toggle" data-chart-type="line" data-chart-id="retirement">
                Line
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Withdrawal Phase Chart -->
  <div class="col-md-6">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 h-100">
      <!-- Card: Top Section (Title) -->
      <div class="bg-gray-50 p-6 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900">Retirement Withdrawal Phase</h2>
        <p class="text-muted mb-0 text-sm mt-1">Track your retirement savings during withdrawal</p>
      </div>
      <!-- Card: Bottom Section (Chart) -->
      <div class="p-6">
        <div id="withdrawalChartContainer" style="position: relative; width: 100%; height: 400px; overflow: hidden; background: white; margin-bottom: 1rem;">
          <div id="withdrawalChart" style="width: 100%; height: 100%; position: absolute; top: 0; left: 0;"></div>
        </div>
        
        <!-- Controls below chart -->
        <div class="chart-controls-container">
          <!-- Series Group -->
          <div class="chart-control-group">
            <label class="chart-control-label">Series</label>
            <div class="chart-button-group">
              <button type="button" class="chart-button-toggle active" data-series="projected_savings" data-chart-id="withdrawal">
                Projected Savings
              </button>
              <button type="button" class="chart-button-toggle active" data-series="target_savings" data-chart-id="withdrawal">
                Target Savings
              </button>
            </div>
          </div>
          
          <!-- Chart Type Group -->
          <div class="chart-control-group">
            <label class="chart-control-label">Chart Type</label>
            <div class="chart-button-group">
              <button type="button" class="chart-button-toggle active" data-chart-type="area" data-chart-id="withdrawal">
                Area
              </button>
              <button type="button" class="chart-button-toggle" data-chart-type="line" data-chart-id="withdrawal">
                Line
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mb-4">
  <h2 class="text-2xl font-semibold text-gray-800">Your Scenarios</h2>
</div>

<div class="row">
  <% if @scenarios.any? %>
    <% @scenarios.each do |scenario| %>
      <div class="col-md-4 mb-4">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <!-- Card: Top Section (Details) -->
          <div class="p-6">
            <!-- Card Header: Title & Actions -->
            <div class="flex justify-between items-start mb-6">
              <div>
                <h2 class="text-xl font-bold text-gray-900"><%= scenario.name %></h2>
                <!-- Wrapped pills in a flex container -->
                <div class="flex items-center space-x-2 mt-2">
                  <% if scenario == @scenarios.first %>
                    <span class="inline-block bg-green-100 text-green-700 text-xs font-semibold px-2.5 py-0.5 rounded-full">Active</span>
                  <% end %>
                  <% if scenario.risk_level.present? %>
                    <span class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold px-2.5 py-0.5 rounded-full">
                      <%= scenario.risk_level&.humanize %>
                    </span>
                  <% end %>
                </div>
              </div>
              <!-- Action Buttons -->
              <div class="flex space-x-1">
                <%= link_to edit_retirement_scenario_path(scenario), class: "p-2 rounded-lg text-gray-400 hover:bg-gray-100 hover:text-gray-600 transition-colors" do %>
                  <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                    <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <% confirm_message = "Are you sure you want to delete this retirement scenario?" %>
                <%= button_to retirement_scenario_path(scenario),
                    method: :delete,
                    class: "p-2 rounded-lg text-gray-400 hover:bg-red-100 hover:text-red-600 transition-colors",
                    aria: { label: "Delete retirement scenario" },
                    title: "Delete retirement scenario",
                    data: { turbo_confirm: confirm_message } do %>
                  <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>

            <!-- Details List -->
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Target Retirement</span>
                <span class="text-sm font-medium text-gray-900"><%= (scenario.target_date rescue Date.today).year %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Current Savings</span>
                <span class="text-sm font-medium text-gray-900">$<%= number_with_delimiter((scenario.current_savings rescue 0).round(0)) %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Monthly Contribution</span>
                <span class="text-sm font-medium text-gray-900">$<%= number_with_delimiter((scenario.monthly_contribution rescue 0).round(0)) %></span>
              </div>
              <!-- Progress Bar -->
              <div class="pt-2">
                <div class="flex justify-between mb-1">
                  <span class="text-sm text-gray-500">Progress</span>
                  <span class="text-sm font-medium text-gray-900"><%= (scenario.progress_percentage rescue 0).round(0) %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5">
                  <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= [(scenario.progress_percentage rescue 0), 100].min %>%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Card: Bottom Section (Summary) -->
          <div class="bg-gray-50 p-6">
            <div class="space-y-4">
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Expected Return</span>
                <span class="text-sm font-medium text-gray-900"><%= (scenario.expected_return_rate rescue 0) %>%</span>
              </div>
              <!-- Highlighted Total Goal -->
              <div class="flex justify-between items-center">
                <span class="text-lg font-semibold text-gray-800">Total Goal</span>
                <span class="text-xl font-bold text-gray-900">$<%= number_with_delimiter((scenario.target_amount rescue 0).round(0)) %></span>
              </div>
            </div>
            
            <!-- Set Active Button -->
            <% unless scenario == @scenarios.first %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <%= form_with url: set_active_retirement_scenario_path(scenario), method: :post, local: true, class: "w-full" do |f| %>
                  <%= f.submit "Set as Active", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
                <% end %>
              </div>
            <% else %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <button class="w-full bg-gray-200 text-gray-600 font-medium py-2 px-4 rounded-lg cursor-not-allowed" disabled>Currently Active</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <p class="text-muted text-center py-5">No scenarios saved yet. Click "New Scenario" to get started.</p>
    </div>
  <% end %>
</div>

<!-- Guide Section -->
<div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-4">
  <!-- Card: Top Section (Title) -->
  <div class="bg-gray-50 p-6 border-b border-gray-200">
    <h2 class="text-xl font-bold text-gray-900">Guide</h2>
  </div>
  <!-- Card: Bottom Section (Content) -->
  <div class="p-6">
    <h6 class="mb-3">Understanding Retirement Planning Terms</h6>
    <div class="mb-3">
      <strong>Dollar Values:</strong>
      <ul class="mb-0 mt-2">
        <li><strong>Today's Dollars:</strong> Values adjusted for inflation, representing purchasing power in today's terms. Examples include:
          <ul>
            <li><strong>Yearly Withdrawal:</strong> Enter the amount you want to withdraw annually in today's purchasing power (e.g., $50,000 today)</li>
            <li><strong>Current Savings:</strong> Your current retirement savings balance</li>
            <li><strong>Monthly Contribution:</strong> How much you're saving each month</li>
          </ul>
        </li>
        <li><strong>Future Dollars:</strong> Values that account for inflation over time. Examples include:
          <ul>
            <li><strong>Target Retirement Amount:</strong> The total amount needed at retirement, accounting for inflation (e.g., $2,000,000 in future dollars)</li>
            <li><strong>Target Retirement Date:</strong> The year you plan to retire</li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="mb-3">
      <strong>Key Concepts:</strong>
      <ul class="mb-0 mt-2">
        <li><strong>Expected Return Rate:</strong> The annual percentage return you expect on your investments (typically 5-8% for balanced portfolios)</li>
        <li><strong>Progress:</strong> Percentage of your retirement goal you've already saved</li>
        <li><strong>Active Scenario:</strong> The scenario that determines what's shown in the summary cards above</li>
      </ul>
    </div>
    <div class="alert mb-0" style="background-color: var(--active-bg); border-color: var(--primary-color); color: var(--primary-color);">
      <small><strong>Tip:</strong> When entering your yearly withdrawal amount, think about what you'd need today. The calculator will automatically adjust for inflation to show you how much you'll need in future dollars.</small>
    </div>
  </div>
</div>

<!-- New Scenario Modal -->
<div class="modal fade" id="newScenarioModal" tabindex="-1" aria-labelledby="newScenarioModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newScenarioModalLabel">New Retirement Scenario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @scenario, local: true do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :name, "Scenario Name", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :target_date, "Target Retirement Date", class: "form-label" %>
                <%= f.date_field :target_date, class: "form-control", required: true %>
                <small class="form-text text-muted">Future dollars</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :target_amount, "Total Goal", class: "form-label" %>
                <%= f.number_field :target_amount, step: 0.01, class: "form-control", required: true %>
                <small class="form-text text-muted">Future dollars</small>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :current_savings, "Current Savings", class: "form-label" %>
                <%= f.number_field :current_savings, step: 0.01, class: "form-control", required: true %>
                <small class="form-text text-muted">Today's dollars</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :monthly_contribution, "Monthly Contribution", class: "form-label" %>
                <%= f.number_field :monthly_contribution, step: 0.01, class: "form-control", required: true %>
                <small class="form-text text-muted">Today's dollars</small>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :expected_return_rate, "Expected Return Rate (%)", class: "form-label" %>
                <%= f.number_field :expected_return_rate, step: 0.01, value: 7, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :risk_level, "Risk Level", class: "form-label" %>
                <%= f.select :risk_level, options_for_select([
                  ['Conservative', 'conservative'],
                  ['Moderate', 'moderate'],
                  ['Aggressive', 'aggressive']
                ]), {}, { class: "form-select" } %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Save Scenario", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  // Chart instances and data storage
  const charts = {
    retirement: {
      instance: null,
      series: {},
      data: {},
      settings: {
        chartType: 'area',
        visibleSeries: {
          projected_savings: true,
          target_savings: true
        }
      },
      resizeObserver: null
    },
    withdrawal: {
      instance: null,
      series: {},
      data: {},
      settings: {
        chartType: 'area',
        visibleSeries: {
          projected_savings: true,
          target_savings: true
        }
      },
      resizeObserver: null
    }
  };

  // Series configuration shared by both charts
  const seriesConfig = {
    projected_savings: {
      title: 'Projected Savings',
      lineColor: '#3b82f6',
      topColor: 'rgba(59,130,246,0.2)',
      bottomColor: 'rgba(59,130,246,0)',
      color: '#3b82f6',
      lineStyle: 2 // Dashed line
    },
    target_savings: {
      title: 'Target Savings',
      lineColor: '#8b5cf6',
      topColor: 'rgba(139,92,246,0.2)',
      bottomColor: 'rgba(139,92,246,0)',
      color: '#8b5cf6'
    }
  };

  // Helper function to create series
  function createSeries(chart, type, name, config) {
    const AreaSeries = window.LightweightCharts.AreaSeries;
    const LineSeries = window.LightweightCharts.LineSeries;

    if (type === 'area') {
      if (typeof chart.addAreaSeries === 'function') {
        const options = {
          lineColor: config.lineColor,
          topColor: config.topColor,
          bottomColor: config.bottomColor,
          lineWidth: 2
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addAreaSeries(options);
      } else if (AreaSeries && typeof chart.addSeries === 'function') {
        const options = {
          lineColor: config.lineColor,
          topColor: config.topColor,
          bottomColor: config.bottomColor,
          lineWidth: 2
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addSeries(AreaSeries, options);
      }
    } else {
      if (typeof chart.addLineSeries === 'function') {
        const options = {
          color: config.color,
          lineWidth: 2
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addLineSeries(options);
      } else if (LineSeries && typeof chart.addSeries === 'function') {
        const options = {
          color: config.color,
          lineWidth: 2
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addSeries(LineSeries, options);
      }
    }
    return null;
  }

  // Initialize retirement chart (accumulation phase)
  function initRetirementChart() {
    const container = document.getElementById('retirementChart');
    const containerRect = document.getElementById('retirementChartContainer');
    
    if (!container || !containerRect) {
      setTimeout(initRetirementChart, 100);
      return;
    }

    if (!window.LightweightCharts || !window.LightweightCharts.createChart) {
      setTimeout(initRetirementChart, 100);
      return;
    }

    try {
      const chart = window.LightweightCharts.createChart(container, {
        width: containerRect.clientWidth,
        height: containerRect.clientHeight,
        layout: {
          background: { color: '#ffffff' },
          textColor: '#1e293b'
        },
        grid: {
          vertLines: { color: '#e2e8f0' },
          horzLines: { color: '#e2e8f0' }
        }
      });

      fetch('/retirement_scenarios/chart_data', {
        headers: { 'Accept': 'application/json' },
        cache: 'no-cache'
      })
      .then(response => response.json())
      .then(chartData => {
        if (!chartData || !Array.isArray(chartData.projected_savings) || !Array.isArray(chartData.target_savings)) {
          throw new Error('Invalid data structure');
        }
        
        charts.retirement.data = chartData;

        // Create series
        Object.keys(seriesConfig).forEach(name => {
          const series = createSeries(chart, charts.retirement.settings.chartType, name, seriesConfig[name]);
          if (series) {
            charts.retirement.series[name] = series;
          }
        });

        // Set data
        updateRetirementChart(chart);

        // Handle resize
        const resizeObserver = new ResizeObserver((entries) => {
          for (const entry of entries) {
            const { width, height } = entry.contentRect;
            if (width > 0 && height > 0) {
              chart.resize(width, height);
            }
          }
        });
        resizeObserver.observe(containerRect);

        charts.retirement.instance = chart;
        charts.retirement.resizeObserver = resizeObserver;
      })
      .catch(error => {
        console.error('Error loading retirement chart data:', error);
        container.innerHTML = '<p class="text-muted text-center py-5">Chart data failed to load</p>';
      });
      
    } catch (error) {
      console.error('Error initializing retirement chart:', error);
    }
  }

  // Initialize withdrawal chart
  function initWithdrawalChart() {
    const container = document.getElementById('withdrawalChart');
    const containerRect = document.getElementById('withdrawalChartContainer');
    
    if (!container || !containerRect) {
      setTimeout(initWithdrawalChart, 100);
      return;
    }

    if (!window.LightweightCharts || !window.LightweightCharts.createChart) {
      setTimeout(initWithdrawalChart, 100);
      return;
    }

    try {
      const chart = window.LightweightCharts.createChart(container, {
        width: containerRect.clientWidth,
        height: containerRect.clientHeight,
        layout: {
          background: { color: '#ffffff' },
          textColor: '#1e293b'
        },
        grid: {
          vertLines: { color: '#e2e8f0' },
          horzLines: { color: '#e2e8f0' }
        }
      });

      fetch('/retirement_scenarios/withdrawal_data', {
        headers: { 'Accept': 'application/json' },
        cache: 'no-cache'
      })
      .then(response => response.json())
      .then(chartData => {
        if (!chartData || !Array.isArray(chartData.projected_savings) || !Array.isArray(chartData.target_savings)) {
          throw new Error('Invalid data structure');
        }
        
        charts.withdrawal.data = chartData;

        // Create series
        Object.keys(seriesConfig).forEach(name => {
          const series = createSeries(chart, charts.withdrawal.settings.chartType, name, seriesConfig[name]);
          if (series) {
            charts.withdrawal.series[name] = series;
          }
        });

        // Set data
        updateWithdrawalChart(chart);

        // Handle resize
        const resizeObserver = new ResizeObserver((entries) => {
          for (const entry of entries) {
            const { width, height } = entry.contentRect;
            if (width > 0 && height > 0) {
              chart.resize(width, height);
            }
          }
        });
        resizeObserver.observe(containerRect);

        charts.withdrawal.instance = chart;
        charts.withdrawal.resizeObserver = resizeObserver;
      })
      .catch(error => {
        console.error('Error loading withdrawal chart data:', error);
        container.innerHTML = '<p class="text-muted text-center py-5">Chart data failed to load</p>';
      });
      
    } catch (error) {
      console.error('Error initializing withdrawal chart:', error);
    }
  }

  // Update retirement chart
  function updateRetirementChart(chart) {
    const data = charts.retirement.data;
    const settings = charts.retirement.settings;
    const todayTimestamp = data.today_timestamp || Math.floor(Date.now() / 1000);
    
    ['projected_savings', 'target_savings'].forEach((name) => {
      const series = charts.retirement.series[name];
      if (!series) return;

      const isVisible = settings.visibleSeries[name];
      series.applyOptions({ visible: isVisible });
      
      if (isVisible && data[name] && data[name].length > 0) {
        const todayValue = data.actual_savings && data.actual_savings.length > 0 
          ? data.actual_savings[data.actual_savings.length - 1].value 
          : (data.projected_savings && data.projected_savings.length > 0 
              ? data.projected_savings[0].value 
              : 0);
        
        const formattedData = [
          { time: todayTimestamp, value: Number(todayValue) },
          ...data[name].map(point => ({
            time: point.time,
            value: Number(point.value)
          }))
        ];
        
        series.setData(formattedData);
      }
    });

    chart.timeScale().fitContent();
  }

  // Update withdrawal chart
  function updateWithdrawalChart(chart) {
    const data = charts.withdrawal.data;
    const settings = charts.withdrawal.settings;
    const startTimestamp = data.retirement_start_timestamp || Math.floor(Date.now() / 1000);
    
    ['projected_savings', 'target_savings'].forEach((name) => {
      const series = charts.withdrawal.series[name];
      if (!series) return;

      const isVisible = settings.visibleSeries[name];
      series.applyOptions({ visible: isVisible });
      
      if (isVisible && data[name] && data[name].length > 0) {
        // The data already starts from retirement start, so just use it directly
        const formattedData = data[name].map(point => ({
          time: point.time,
          value: Number(point.value)
        }));
        
        series.setData(formattedData);
      }
    });

    chart.timeScale().fitContent();
  }

  // Recreate series when chart type changes
  function recreateSeries(chartId) {
    const chartData = charts[chartId];
    if (!chartData.instance) return;

    const chart = chartData.instance;
    const AreaSeries = window.LightweightCharts.AreaSeries;
    const LineSeries = window.LightweightCharts.LineSeries;

    // Remove existing series
    Object.values(chartData.series).forEach(series => {
      try {
        chart.removeSeries(series);
      } catch (e) {
        console.error('Error removing series:', e);
      }
    });

    chartData.series = {};

    // Create new series with correct type
    Object.keys(seriesConfig).forEach(name => {
      const series = createSeries(chart, chartData.settings.chartType, name, seriesConfig[name]);
      if (series) {
        chartData.series[name] = series;
      }
    });

    if (chartId === 'retirement') {
      updateRetirementChart(chart);
    } else {
      updateWithdrawalChart(chart);
    }
  }

  // Setup control event listeners
  function setupControls() {
    // Series toggle buttons
    document.querySelectorAll('.chart-button-toggle[data-series]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const chartId = e.target.dataset.chartId;
        const seriesName = e.target.dataset.series;
        const isActive = e.target.classList.contains('active');
        
        e.target.classList.toggle('active');
        charts[chartId].settings.visibleSeries[seriesName] = !isActive;
        
        if (chartId === 'retirement') {
          updateRetirementChart(charts.retirement.instance);
        } else {
          updateWithdrawalChart(charts.withdrawal.instance);
        }
      });
    });

    // Chart type buttons
    document.querySelectorAll('.chart-button-toggle[data-chart-type]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const chartId = e.target.dataset.chartId;
        const chartType = e.target.dataset.chartType;
        
        // Remove active from all chart type buttons for this chart
        const chartCard = document.querySelector(`#${chartId}ChartContainer`).closest('.card');
        chartCard.querySelectorAll(`.chart-button-toggle[data-chart-type][data-chart-id="${chartId}"]`).forEach(b => {
          b.classList.remove('active');
        });
        
        e.target.classList.add('active');
        charts[chartId].settings.chartType = chartType;
        recreateSeries(chartId);
      });
    });
  }

  // Cleanup function
  function cleanup() {
    Object.keys(charts).forEach(chartId => {
      const chartData = charts[chartId];
      if (chartData.instance) {
        try {
          chartData.instance.remove();
        } catch (e) {
          console.error('Error removing chart:', e);
        }
        chartData.instance = null;
        chartData.series = {};
      }
      if (chartData.resizeObserver) {
        chartData.resizeObserver.disconnect();
        chartData.resizeObserver = null;
      }
    });
  }

  // Start initialization
  function initAllCharts() {
    if (!window.LightweightCharts) {
      setTimeout(initAllCharts, 100);
      return;
    }
    initRetirementChart();
    initWithdrawalChart();
    setupControls();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAllCharts);
  } else {
    initAllCharts();
  }

  // Handle Turbo events
  document.addEventListener('turbo:load', function() {
    cleanup();
    setTimeout(initAllCharts, 50);
  });
  document.addEventListener('turbo:before-cache', cleanup);
})();
</script>

