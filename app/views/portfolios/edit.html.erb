<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <% if @holding.persisted? %>
      <h1 class="text-2xl font-bold text-gray-900">Edit <%= @holding.entry_type == 'trade' ? 'Trade' : 'Holding' %></h1>
      <p class="text-gray-500 mt-1">Update your portfolio <%= @holding.entry_type == 'trade' ? 'trade' : 'holding' %>.</p>
    <% else %>
      <h1 class="text-2xl font-bold text-gray-900">Add <%= @holding.entry_type == 'trade' ? 'Trade' : 'Holding' %></h1>
      <p class="text-gray-500 mt-1">Add a new <%= @holding.entry_type == 'trade' ? 'trade' : 'holding' %> to your portfolio.</p>
    <% end %>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-6">
      <%= form_with model: @holding, url: (@holding.persisted? ? portfolio_path(@holding) : portfolios_path), method: (@holding.persisted? ? :patch : :post), local: true, class: "space-y-6" do |f| %>
        <% if @holding.errors.any? %>
          <div class="rounded-xl bg-red-50 p-4 border border-red-100">
            <div class="flex">
              <div class="flex-shrink-0">
                <%= icon('alert_triangle', size: 20, class: 'text-red-400') %>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@holding.errors.count, "error") %> prohibited this holding from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @holding.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= f.hidden_field :entry_type %>
        <%= f.hidden_field :trade_type %>
        
        <% if @holding.entry_type == 'trade' %>
           <div class="flex gap-4 p-1 bg-gray-100 rounded-lg w-fit mb-4">
              <label class="cursor-pointer px-4 py-2 rounded-md text-sm font-medium transition-all <%= @holding.trade_type == 'buy' ? 'bg-white shadow-sm text-gray-900' : 'text-gray-500 hover:text-gray-900' %>">
                 <%= f.radio_button :trade_type, 'buy', class: "hidden", checked: @holding.trade_type != 'sell' %>
                 Buy
              </label>
              <label class="cursor-pointer px-4 py-2 rounded-md text-sm font-medium transition-all <%= @holding.trade_type == 'sell' ? 'bg-white shadow-sm text-gray-900' : 'text-gray-500 hover:text-gray-900' %>">
                 <%= f.radio_button :trade_type, 'sell', class: "hidden", checked: @holding.trade_type == 'sell' %>
                 Sell
              </label>
           </div>
        <% end %>
        
        <div class="grid grid-cols-1 gap-6">
          <div>
            <%= f.label :ticker, "Ticker Symbol", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :ticker, class: "input-standard", required: true, placeholder: "e.g. AAPL, BTC" %>
            <p class="mt-1 text-xs text-gray-500">Stocks (AAPL) or Crypto (BTC, ETH)</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :shares, "Shares / Quantity", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.number_field :shares, step: 0.000001, class: "input-standard", required: true, placeholder: "0.00" %>
            </div>
            
            <div>
              <%= f.label :average_cost, "Price (per share)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="relative rounded-md shadow-sm">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                  <span class="text-gray-500 sm:text-sm">$</span>
                </div>
                <%= f.number_field :average_cost, step: 0.01, class: "input-standard pl-7", required: true, placeholder: "0.00" %>
              </div>
            </div>
          </div>
          
          <div>
             <%= f.label :entry_date, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
             <%= f.date_field :entry_date, class: "input-standard", value: @holding.entry_date || Date.today %>
          </div>
        </div>
        
        <div class="pt-4 flex justify-end gap-3 border-t border-gray-100 mt-6">
          <%= link_to "Cancel", portfolios_path, class: "btn-secondary" %>
          <%= f.submit @holding.persisted? ? "Update Investment" : "Add Investment", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
