<div class="page-header mb-4">
  <h1>Edit Investment</h1>
  <p class="text-muted mb-0">Update your portfolio transaction</p>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: @holding, url: portfolio_path(@holding), local: true do |f| %>
      <% if @holding.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @holding.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :ticker, "Ticker/Symbol", class: "form-label" %>
            <%= f.text_field :ticker, class: "form-control", required: true, value: @holding.ticker %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :cost_basis, "Cost Basis", class: "form-label" %>
            <%= f.number_field :cost_basis, step: 1, class: "form-control", required: true, value: @holding.cost_basis_cents ? (@holding.cost_basis_cents / 100.0).round(0) : '' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :shares, "Shares", class: "form-label" %>
            <%= f.number_field :shares, step: 0.01, class: "form-control", required: true, value: @holding.shares %>
          </div>
        </div>
      </div>
      
      <div class="d-flex justify-content-end gap-2">
        <%= link_to "Cancel", portfolios_path, class: "btn btn-secondary" %>
        <%= f.submit "Update Investment", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

