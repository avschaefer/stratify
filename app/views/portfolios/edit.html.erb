<div class="page-header mb-4">
  <% if @holding %>
    <h1>Edit <%= @holding.entry_type == 'trade' ? 'Trade' : 'Holding' %></h1>
    <p class="text-muted mb-0">Update your portfolio <%= @holding.entry_type == 'trade' ? 'trade' : 'holding' %></p>
  <% else %>
    <h1>Edit Investment</h1>
    <p class="text-muted mb-0">Update your portfolio investment</p>
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: @holding, url: (@holding.persisted? ? portfolio_path(@holding) : portfolios_path), method: (@holding.persisted? ? :patch : :post), local: true do |f| %>
      <% if @holding.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @holding.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :ticker, "Ticker/Symbol", class: "form-label" %>
            <%= f.text_field :ticker, class: "form-control", required: true, value: @holding.ticker %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :shares, "Shares", class: "form-label" %>
            <%= f.number_field :shares, step: 0.01, class: "form-control", required: true, value: @holding.shares %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :average_cost, "Average Cost ($)", class: "form-label" %>
            <%= f.number_field :average_cost, step: 0.01, class: "form-control", required: true, value: @holding.average_cost %>
            <small class="text-muted">Price per share</small>
          </div>
        </div>
      </div>
      
      <div class="d-flex justify-content-end gap-2">
        <%= link_to "Cancel", portfolios_path, class: "btn btn-secondary" %>
        <%= f.submit "Update Investment", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

