<div class="page-header d-flex justify-content-between align-items-start mb-4">
  <div>
    <h1>Insurance</h1>
    <p class="text-muted mb-0">Track your insurance policies</p>
  </div>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPolicyModal">
    <i class="bi bi-plus-circle"></i> New Policy
  </button>
</div>

<div class="mb-4">
  <h2 class="text-2xl font-semibold text-gray-800">Your Policies</h2>
</div>

<div class="row">
  <% if @policies.any? %>
    <% @policies.each do |policy| %>
      <div class="col-md-4 mb-4">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <!-- Card: Top Section (Details) -->
          <div class="p-6">
            <!-- Card Header: Title & Actions -->
            <div class="flex justify-between items-start mb-6">
              <div>
                <h2 class="text-xl font-bold text-gray-900"><%= (policy.policy_type rescue 'life').to_s.humanize %></h2>
                <p class="text-sm text-gray-500 mt-1"><%= policy.provider rescue 'N/A' %></p>
              </div>
              <!-- Action Buttons -->
              <div class="flex space-x-1">
                <%= link_to edit_insurance_policy_path(policy), class: "p-2 rounded-lg text-gray-400 hover:bg-gray-100 hover:text-gray-600 transition-colors" do %>
                  <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                    <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <% confirm_message = "Are you sure you want to delete this insurance policy?" %>
                <%= button_to insurance_policy_path(policy),
                    method: :delete,
                    class: "p-2 rounded-lg text-gray-400 hover:bg-red-100 hover:text-red-600 transition-colors",
                    aria: { label: "Delete insurance policy" },
                    title: "Delete insurance policy",
                    data: { turbo_confirm: confirm_message } do %>
                  <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>

            <!-- Details List -->
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Coverage</span>
                <span class="text-sm font-medium text-gray-900">$<%= number_with_delimiter((policy.coverage_amount rescue 0).round(0)) %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-500">Term</span>
                <span class="text-sm font-medium text-gray-900"><%= policy.term_years rescue 0 %> years</span>
              </div>
            </div>
          </div>

          <!-- Card: Bottom Section (Summary/Notes) -->
          <div class="bg-gray-50 p-6">
            <div class="space-y-4">
              <!-- Highlighted Monthly Premium -->
              <div class="flex justify-between items-center">
                <span class="text-lg font-semibold text-gray-800">Monthly Premium</span>
                <span class="text-xl font-bold text-blue-600">$<%= number_with_delimiter((policy.premium rescue 0).round(0)) %></span>
              </div>
              <% if policy.notes.present? %>
                <div class="pt-2 border-t border-gray-200">
                  <span class="text-sm font-semibold text-gray-800">Notes</span>
                  <p class="text-sm text-gray-600 mt-1"><%= policy.notes %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <p class="text-muted text-center py-5">No policies saved yet. Click "New Policy" to get started.</p>
    </div>
  <% end %>
</div>

<!-- New Policy Modal -->
<div class="modal fade" id="newPolicyModal" tabindex="-1" aria-labelledby="newPolicyModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPolicyModalLabel">New Insurance Policy</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @policy, local: true do |f| %>
          <% if @policy.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @policy.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :policy_type, "Policy Type", class: "form-label" %>
                <%= f.select :policy_type, options_for_select([
                  ['Life', 'life'],
                  ['Health', 'health'],
                  ['Auto', 'auto'],
                  ['Home', 'home']
                ]), {}, { class: "form-select", required: true } %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :provider, "Provider", class: "form-label" %>
                <%= f.text_field :provider, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :coverage_amount, "Coverage Amount", class: "form-label" %>
                <%= f.number_field :coverage_amount, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :premium, "Monthly Premium", class: "form-label" %>
                <%= f.number_field :premium, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :term_years, "Term (years)", class: "form-label" %>
                <%= f.number_field :term_years, step: 0.25, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <%= f.label :notes, "Notes", class: "form-label" %>
                <%= f.text_field :notes, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Save Policy", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
