<div class="page-header d-flex justify-content-between align-items-start mb-4">
  <div>
    <h1>Insurance</h1>
    <p class="text-muted mb-0">Track your insurance policies</p>
  </div>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPolicyModal">
    <i class="bi bi-plus-circle"></i> New Policy
  </button>
</div>

<div class="mb-3">
  <h2 style="font-size: 1.25rem; font-weight: 600; color: #1e293b;">Your Policies</h2>
</div>

<div class="row">
  <% if @policies.any? %>
    <% @policies.each do |policy| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body position-relative">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h5 class="mb-0"><%= (policy.policy_type rescue 'life').to_s.humanize %></h5>
                <small class="text-muted"><%= policy.provider rescue 'N/A' %></small>
              </div>
              <div class="d-flex align-items-center gap-2">
                <%= link_to edit_insurance_policy_path(policy), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%# This div wraps both button and dialog for proper Stimulus scoping %>
                <div data-controller="confirm"
                     data-confirm-message-value="Are you sure you want to delete this insurance policy?">
                  <%= button_to insurance_policy_path(policy),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      aria: { label: "Delete insurance policy" },
                      title: "Delete insurance policy",
                      form: {
                        data: { action: "submit->confirm#handleSubmit" },
                        class: "d-inline"
                      } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                  <%= render "shared/confirm_dialog",
                      title: "Confirm Delete",
                      message: "Are you sure you want to delete this insurance policy?",
                      confirm_label: "Delete",
                      confirm_icon: "bi bi-trash" %>
                </div>
              </div>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Coverage:</span>
                <strong>$<%= number_with_delimiter((policy.coverage_amount rescue 0).round(0)) %></strong>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Premium:</span>
                <strong>$<%= number_with_delimiter((policy.premium rescue 0).round(0)) %>/mo</strong>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Term:</span>
                <strong><%= policy.term_years rescue 0 %> years</strong>
              </div>
            </div>
            
            <% if policy.notes.present? %>
              <div class="mt-2 pt-2 border-top">
                <small class="text-muted"><%= policy.notes %></small>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <p class="text-muted text-center py-5">No policies saved yet. Click "New Policy" to get started.</p>
    </div>
  <% end %>
</div>

<!-- New Policy Modal -->
<div class="modal fade" id="newPolicyModal" tabindex="-1" aria-labelledby="newPolicyModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPolicyModalLabel">New Insurance Policy</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @policy, local: true do |f| %>
          <% if @policy.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @policy.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :policy_type, "Policy Type", class: "form-label" %>
                <%= f.select :policy_type, options_for_select([
                  ['Life', 'life'],
                  ['Health', 'health'],
                  ['Auto', 'auto'],
                  ['Home', 'home']
                ]), {}, { class: "form-select", required: true } %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :provider, "Provider", class: "form-label" %>
                <%= f.text_field :provider, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :coverage_amount, "Coverage Amount", class: "form-label" %>
                <%= f.number_field :coverage_amount, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :premium, "Monthly Premium", class: "form-label" %>
                <%= f.number_field :premium, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :term_years, "Term (years)", class: "form-label" %>
                <%= f.number_field :term_years, step: 0.25, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <%= f.label :notes, "Notes", class: "form-label" %>
                <%= f.text_field :notes, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Save Policy", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
