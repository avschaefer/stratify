<div class="max-w-3xl mx-auto">
  <div class="mb-6">
    <% if @loan.persisted? %>
      <h1 class="text-2xl font-bold text-gray-900">Edit Loan</h1>
      <p class="text-gray-500 mt-1">Modify your loan details.</p>
    <% else %>
      <h1 class="text-2xl font-bold text-gray-900">Add Loan</h1>
      <p class="text-gray-500 mt-1">Track a new loan or debt.</p>
    <% end %>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-6">
      <%= form_with model: @loan, local: true, class: "space-y-6" do |f| %>
        <% if @loan.errors.any? %>
          <div class="rounded-xl bg-red-50 p-4 border border-red-100">
            <div class="flex">
              <div class="flex-shrink-0">
                <%= icon('alert_triangle', size: 20, class: 'text-red-400') %>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @loan.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="col-span-1 md:col-span-2">
            <%= f.label :name, "Loan Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "input-standard", required: true, placeholder: "e.g. Mortgage, Car Loan" %>
          </div>
          
          <div>
            <%= f.label :principal, "Loan Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="relative rounded-md shadow-sm">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                  <span class="text-gray-500 sm:text-sm">$</span>
                </div>
                <%= f.number_field :principal, step: 1, class: "input-standard pl-7", required: true, placeholder: "0.00" %>
            </div>
          </div>
          
          <div>
            <%= f.label :rate_apr, "Interest Rate APR (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.number_field :rate_apr, step: 0.01, class: "input-standard", required: true, placeholder: "5.0" %>
          </div>
          
          <div>
            <%= f.label :term_years, "Term (years)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.number_field :term_years, step: 0.25, class: "input-standard", required: true, placeholder: "30" %>
          </div>

           <div>
            <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :start_date, class: "input-standard", value: @loan.start_date %>
          </div>

        </div>

        <div class="pt-4 border-t border-gray-100">
            <h3 class="text-sm font-medium text-gray-900 mb-4">Advanced Details</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                 <div>
                    <%= f.label :current_balance, "Current Balance ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <div class="relative rounded-md shadow-sm">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                        <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <%= f.number_field :current_balance, step: 0.01, class: "input-standard pl-7", value: @loan.current_balance %>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Leave blank if same as principal</p>
                </div>
                
                <div>
                    <%= f.label :periodic_payment, "Periodic Payment ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <div class="relative rounded-md shadow-sm">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                        <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <%= f.number_field :periodic_payment, step: 0.01, class: "input-standard pl-7", value: @loan.periodic_payment %>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Leave blank to auto-calculate</p>
                </div>
                 <div>
                    <%= f.label :payment_period, "Payment Frequency", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= f.select :payment_period, options_for_select([
                    ['Monthly', 'monthly'],
                    ['Bi-weekly', 'biweekly'],
                    ['Weekly', 'weekly'],
                    ['Yearly', 'yearly']
                    ], @loan.payment_period), {}, { class: "input-standard", required: true } %>
                </div>
                
                <div>
                    <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= f.text_field :notes, class: "input-standard" %>
                </div>
            </div>
        </div>

        <div class="pt-4 flex justify-end gap-3 border-t border-gray-100 mt-6">
          <%= link_to "Cancel", loans_path, class: "btn-secondary" %>
          <%= f.submit @loan.persisted? ? "Update Loan" : "Add Loan", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
