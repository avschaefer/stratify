<div class="page-header mb-4">
  <h1>Edit Loan</h1>
  <p class="text-muted mb-0">Modify your loan details</p>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: @loan, local: true do |f| %>
      <% if @loan.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h5>
          <ul>
            <% @loan.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :name, "Loan Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :principal, "Loan Amount", class: "form-label" %>
            <%= f.number_field :principal, step: 1, class: "form-control", required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :rate_apr, "Interest Rate APR (%)", class: "form-label" %>
            <%= f.number_field :rate_apr, step: 0.01, class: "form-control", required: true %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :rate_apy, "Interest Rate APY (%)", class: "form-label" %>
            <%= f.number_field :rate_apy, step: 0.01, class: "form-control" %>
            <small class="text-muted text-xs">Optional</small>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :term_years, "Term (years)", class: "form-label" %>
            <%= f.number_field :term_years, step: 0.25, class: "form-control", required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :start_date, "Start Date", class: "form-label" %>
            <%= f.date_field :start_date, class: "form-control", value: @loan.start_date %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :end_date, "End Date", class: "form-label" %>
            <%= f.date_field :end_date, class: "form-control", value: @loan.end_date %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <%= f.label :current_period, "Current Period", class: "form-label" %>
            <%= f.number_field :current_period, step: 1, class: "form-control", value: @loan.current_period %>
            <small class="text-muted text-xs">Number of periods paid</small>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :current_balance, "Current Balance ($)", class: "form-label" %>
            <%= f.number_field :current_balance, step: 0.01, class: "form-control", value: @loan.current_balance %>
            <small class="text-muted text-xs">Current outstanding balance</small>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :periodic_payment, "Periodic Payment ($)", class: "form-label" %>
            <%= f.number_field :periodic_payment, step: 0.01, class: "form-control", value: @loan.periodic_payment %>
            <small class="text-muted text-xs">Payment amount per period</small>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :payment_period, "Payment Frequency", class: "form-label" %>
            <%= f.select :payment_period, options_for_select([
              ['Monthly', 'monthly'],
              ['Bi-weekly', 'biweekly'],
              ['Weekly', 'weekly'],
              ['Yearly', 'yearly']
            ], @loan.payment_period), {}, { class: "form-select", required: true } %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :compounding_period, "Compounding Period", class: "form-label" %>
            <%= f.select :compounding_period, options_for_select([
              ['Daily', 'daily'],
              ['Monthly', 'monthly'],
              ['Quarterly', 'quarterly'],
              ['Annually', 'annually']
            ], @loan.compounding_period), {}, { class: "form-select" } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="mb-3">
            <%= f.label :notes, "Notes", class: "form-label" %>
            <%= f.text_field :notes, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-end gap-2">
        <%= link_to "Cancel", loans_path, class: "btn btn-secondary" %>
        <%= f.submit "Update Loan", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

