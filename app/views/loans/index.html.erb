<div class="space-y-6 animate-fade-in">
    <!-- Top Actions -->
    <div class="flex justify-between items-center">
        <h2 class="text-xl font-bold text-gray-900">Your Loans</h2>
        <%= link_to "New Loan", new_loan_path, class: "btn-primary" %>
    </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% if @loans.any? %>
      <% @loans.each do |loan| %>
         <% 
           principal = loan.principal || 0
           current_balance = loan.current_balance || 0
           principal_paid = principal - current_balance
           principal_progress = principal > 0 ? (principal_paid / principal * 100) : 0
           # Clamp progress between 0 and 100
           principal_progress = [[principal_progress, 0].max, 100].min
         %>
        
        <%= ui_card class: "p-6" do %>
            <div class="flex justify-between items-start mb-4">
                <h3 class="font-bold text-lg text-gray-900"><%= loan.name %></h3>
                <div class="flex gap-2 items-center">
                    <%= ui_badge(loan.status || 'Active', type: :brand) %>
                    <%= link_to "Edit", edit_loan_path(loan), class: "text-gray-400 hover:text-blue-600 font-medium text-xs" %>
                </div>
            </div>
            
            <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-500">Current Balance</span>
                    <span class="font-medium text-gray-900"><%= number_to_currency(current_balance) %></span>
                </div>
                 <div class="flex justify-between">
                    <span class="text-gray-500">Interest Rate</span>
                    <span class="font-medium text-gray-900"><%= loan.rate_apr %>%</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-500">Monthly Payment</span>
                    <span class="font-medium text-gray-900"><%= number_to_currency(loan.periodic_payment || 0) %></span>
                </div>

                <div class="pt-2 mt-2 border-t border-gray-100">
                     <div class="flex justify-between mb-1">
                        <span class="text-xs text-gray-500">Principal Paid</span>
                        <span class="text-xs font-medium text-blue-600"><%= principal_progress.round(1) %>%</span>
                    </div>
                    <div class="h-1.5 w-full bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full bg-blue-500 rounded-full" style="width: <%= principal_progress %>%"></div>
                    </div>
                </div>
            </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="col-span-full text-center py-10 bg-white rounded-2xl border border-gray-200 text-gray-500">
        No loans found.
      </div>
    <% end %>
  </div>
</div>
