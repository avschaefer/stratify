<% @accounts.each do |account| %>
  <!-- Edit Balances Modal for <%= account.name %> -->
  <div class="modal" id="editBalancesModal<%= account.id %>" tabindex="-1" aria-labelledby="editBalancesModalLabel<%= account.id %>" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editBalancesModalLabel<%= account.id %>">Edit Monthly Balances - <%= account.name %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" style="max-height: 60vh; overflow-y: auto;">
          <% 
            # Generate list of months from 2 years ago to current month
            start_date = 24.months.ago.beginning_of_month
            end_date = Date.today.beginning_of_month
            months_list = []
            current = start_date
            while current <= end_date
              months_list << current
              current = current.next_month
            end
            
            # Get existing balances indexed by month
            existing_balances = account.balances.index_by { |b| b.balance_date.beginning_of_month }
          %>
          <form id="bulkBalancesForm<%= account.id %>" data-account-id="<%= account.id %>">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th style="width: 40%; color: #e5e5e5; background-color: rgba(255, 255, 255, 0.05); border-bottom: 1px solid rgba(255, 255, 255, 0.1);">Month</th>
                  <th style="width: 60%; color: #e5e5e5; background-color: rgba(255, 255, 255, 0.05); border-bottom: 1px solid rgba(255, 255, 255, 0.1);">Balance</th>
                </tr>
              </thead>
              <tbody>
                <% months_list.reverse.each do |month_date| %>
                  <% balance = existing_balances[month_date] %>
                  <tr style="background-color: rgba(255, 255, 255, 0.02);">
                    <td style="color: #e5e5e5; padding: 0.75rem 0.5rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                      <strong><%= month_date.strftime('%B %Y') %></strong>
                    </td>
                    <td style="padding: 0.75rem 0.5rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                      <input 
                        type="hidden" 
                        name="snapshots[][balance_date]" 
                        value="<%= month_date.strftime('%Y-%m-%d') %>"
                      >
                      <% if balance %>
                        <input 
                          type="hidden" 
                          name="snapshots[][id]" 
                          value="<%= balance.id %>"
                        >
                      <% end %>
                      <input 
                        type="number" 
                        name="snapshots[][amount]" 
                        value="<%= balance ? (balance.amount_cents / 100.0).round(0) : '' %>"
                        step="1" 
                        class="form-control form-control-sm"
                        placeholder="Enter balance"
                        style="background-color: rgba(255, 255, 255, 0.05); border-color: rgba(255, 255, 255, 0.2); color: #e5e5e5;"
                      >
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="saveBalances(<%= account.id %>)">Save All Changes</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
(function() {
  function saveBalances(accountId) {
    const form = document.getElementById('bulkBalancesForm' + accountId);
    const formData = new FormData(form);
    
    // Collect all snapshot data
    const snapshots = [];
    const snapshotInputs = form.querySelectorAll('input[name^="snapshots["]');
    const rows = form.querySelectorAll('tbody tr');
    
    rows.forEach((row, index) => {
      const dateInput = row.querySelector('input[name*="[balance_date]"]');
      const idInput = row.querySelector('input[name*="[id]"]');
      const amountInput = row.querySelector('input[name*="[amount]"]');
      
      if (dateInput && amountInput && amountInput.value.trim() !== '') {
        const snapshotData = {
          balance_date: dateInput.value,
          amount: parseFloat(amountInput.value) // Send as dollars, controller will convert to cents
        };
        
        if (idInput && idInput.value) {
          snapshotData.id = idInput.value;
        }
        
        snapshots.push(snapshotData);
      }
    });
    
    // Send to server
    fetch(`/accounts/${accountId}/bulk_update_snapshots`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Accept': 'application/json'
      },
      body: JSON.stringify({ snapshots: snapshots })
    })
    .then(response => {
      return response.json().then(data => {
        if (!response.ok) {
          throw { data: data, status: response.status };
        }
        return data;
      });
    })
    .then(data => {
      // Close modal and reload page
      const modal = bootstrap.Modal.getInstance(document.getElementById('editBalancesModal' + accountId));
      if (modal) {
        modal.hide();
      }
      if (data.success) {
        window.location.reload();
      } else {
        alert('Error saving balances: ' + (data.errors ? data.errors.join(', ') : 'Unknown error'));
      }
    })
    .catch(error => {
      console.error('Error:', error);
      if (error.data && error.data.errors) {
        alert('Error saving balances: ' + error.data.errors.join(', '));
      } else {
        alert('Error saving balances. Please try again.');
      }
    });
  }
  
  // Make function globally available
  window.saveBalances = saveBalances;
})();
</script>

<script>
(function() {
  // Initialize drag-and-drop for account rows
  function initSortableAccounts() {
    if (typeof Sortable === 'undefined') {
      setTimeout(initSortableAccounts, 100);
      return;
    }
    
    // Find all tbody elements with sortable-accounts class
    const sortableContainers = document.querySelectorAll('tbody.sortable-accounts');
    
    sortableContainers.forEach(container => {
      const accountType = container.getAttribute('data-account-type');
      
      new Sortable(container, {
        handle: '.bi-grip-vertical, tr[data-account-id]', // Allow dragging by grip icon or row
        animation: 150,
        ghostClass: 'sortable-ghost',
        chosenClass: 'sortable-chosen',
        dragClass: 'sortable-drag',
        filter: '.account-type-divider', // Don't allow dragging section headers
        preventOnFilter: false,
        onEnd: function(evt) {
          // Get all account IDs in the new order (excluding section headers)
          const accountRows = Array.from(container.querySelectorAll('tr[data-account-id]'));
          const accountIds = accountRows.map(row => parseInt(row.getAttribute('data-account-id')));
          
          console.log('Reordering accounts:', { accountIds, accountType });
          
          // Send reorder request to server
          fetch('/accounts/reorder', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
              'Accept': 'application/json'
            },
            body: JSON.stringify({
              account_ids: accountIds,
              account_type: accountType
            })
          })
          .then(response => {
            return response.json().then(data => {
              if (!response.ok) {
                throw { data: data, status: response.status };
              }
              return data;
            });
          })
          .then(data => {
            console.log('Reorder response:', data);
            if (data.success) {
              // Success - no need to reload, the order is already updated in the DOM
              // The next page load will show the correct order from the database
            } else {
              console.error('Reorder failed:', data.errors);
              alert('Failed to save order: ' + (data.errors ? data.errors.join(', ') : 'Unknown error'));
              // Reload page to restore original order
              window.location.reload();
            }
          })
          .catch(error => {
            console.error('Error reordering accounts:', error);
            if (error.data && error.data.errors) {
              alert('Error saving order: ' + error.data.errors.join(', '));
            } else {
              alert('Error saving order. Please try again.');
            }
            // Reload page to restore original order
            window.location.reload();
          });
        }
      });
    });
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSortableAccounts);
  } else {
    initSortableAccounts();
  }
})();
</script>

