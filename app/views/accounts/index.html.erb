      .then(chartData => {
        // Ensure we have the expected structure, even if empty
        if (!chartData) chartData = { cash_flow: [] };
        if (!chartData.cash_flow) chartData.cash_flow = [];
        if (!Array.isArray(chartData.cash_flow)) chartData.cash_flow = [];

        charts.cashFlowBar.data = chartData;

        // Create bar series for cash flow with automatic color coding (green for positive, red for negative)
        const BarSeries = window.LightweightCharts.BarSeries;
        if (typeof chart.addBarSeries === 'function') {
          charts.cashFlowBar.series.cash_flow_bar = chart.addBarSeries({
            upColor: '#10b981', // Green for positive
            downColor: '#ef4444', // Red for negative
            priceLineVisible: false,
            lastValueVisible: true
          });
        } else if (BarSeries && typeof chart.addSeries === 'function') {
          charts.cashFlowBar.series.cash_flow_bar = chart.addSeries(BarSeries, {
            upColor: '#10b981',
            downColor: '#ef4444',
            priceLineVisible: false,
            lastValueVisible: true
          });
        }

        // Set data
        updateCashFlowBarChart(chart);

        // Handle resize
        const resizeObserver = new ResizeObserver((entries) => {
          for (const entry of entries) {
            const { width, height } = entry.contentRect;
            if (width > 0 && height > 0) {
              chart.resize(width, height);
