          topColor: config.topColor,
          bottomColor: config.bottomColor,
          lineWidth: 2,
          priceLineVisible: false,
          lastValueVisible: true
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addAreaSeries(options);
      } else if (AreaSeries && typeof chart.addSeries === 'function') {
        const options = {
          lineColor: config.lineColor,
          topColor: config.topColor,
          bottomColor: config.bottomColor,
          lineWidth: 2,
          priceLineVisible: false,
          lastValueVisible: true
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addSeries(AreaSeries, options);
      }
    } else if (type === 'line') {
      if (typeof chart.addLineSeries === 'function') {
        const options = {
          color: config.color,
          lineWidth: 2,
          priceLineVisible: false,
          lastValueVisible: true
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addLineSeries(options);
      } else if (LineSeries && typeof chart.addSeries === 'function') {
        const options = {
          color: config.color,
          lineWidth: 2,
          priceLineVisible: false,
          lastValueVisible: true
        };
        if (config.lineStyle !== undefined) {
          options.lineStyle = config.lineStyle;
        }
        return chart.addSeries(LineSeries, options);
      }
    } else if (type === 'bar') {
      // Use HistogramSeries for positive/negative bars with dynamic colors
      if (typeof chart.addHistogramSeries === 'function') {
        return chart.addHistogramSeries({
          priceFormat: {
            type: 'price',
            precision: 2,
            minMove: 0.01
          },
          priceLineVisible: false,
          lastValueVisible: true
        });
      } else if (HistogramSeries && typeof chart.addSeries === 'function') {
        return chart.addSeries(HistogramSeries, {
          priceFormat: {
            type: 'price',
            precision: 2,
            minMove: 0.01
          },
          priceLineVisible: false,
          lastValueVisible: true
        });
      } else if (typeof chart.addBarSeries === 'function') {
        return chart.addBarSeries({
          upColor: config.upColor || config.color,
          downColor: config.downColor || config.color,
          priceLineVisible: false,
          lastValueVisible: true
        });
      } else if (BarSeries && typeof chart.addSeries === 'function') {
        return chart.addSeries(BarSeries, {
          upColor: config.upColor || config.color,
          downColor: config.downColor || config.color,
          priceLineVisible: false,
          lastValueVisible: true
        });
      }
    }
    return null;
  }

  // Initialize combined chart (cash flow & expenses)
  function initCombinedChart() {
    const container = document.getElementById('combinedChart');
    const containerRect = document.getElementById('combinedChartContainer');

    if (!container || !containerRect) {
      setTimeout(initCombinedChart, 100);
      return;
    }

    if (!window.LightweightCharts || !window.LightweightCharts.createChart) {
      setTimeout(initCombinedChart, 100);
      return;
    }

    try {
      const chart = window.LightweightCharts.createChart(container, {
        width: containerRect.clientWidth,
        height: containerRect.clientHeight,
        layout: {
          background: { color: '#000000' },
          textColor: '#ffffff',
          fontSize: 12
        },
        grid: {
          vertLines: { visible: false },
          horzLines: { visible: false }
        },
        crosshair: {
          mode: 1,
          vertLine: {
            color: '#4285F4',
            width: 1,
            style: 2,
            labelBackgroundColor: '#4285F4'
          },
          horzLine: {
            color: '#4285F4',
            width: 1,
            style: 2,
            labelBackgroundColor: '#4285F4'
          }
        },
        rightPriceScale: {
          borderColor: 'rgba(255, 255, 255, 0.1)',
          textColor: '#ffffff'
        },
        timeScale: {
          borderColor: 'rgba(255, 255, 255, 0.1)',
          textColor: '#ffffff'
        }
      });

      // Load both cash flow and expenses data
      Promise.all([
        fetch('/accounts/cash_flow_chart_data', {
          headers: { 'Accept': 'application/json' },
          cache: 'no-cache'
        }).then(response => response.json()),
        fetch('/accounts/expenses_chart_data', {
          headers: { 'Accept': 'application/json' },
          cache: 'no-cache'
        }).then(response => response.json())
      ])
      .then(([cashFlowData, expensesData]) => {
        // Ensure we have the expected structure, even if empty
        if (!cashFlowData) cashFlowData = { cash_flow: [] };
        if (!cashFlowData.cash_flow) cashFlowData.cash_flow = [];
        if (!Array.isArray(cashFlowData.cash_flow)) cashFlowData.cash_flow = [];

        if (!expensesData) expensesData = { expenses: [] };
        if (!expensesData.expenses) expensesData.expenses = [];
        if (!Array.isArray(expensesData.expenses)) expensesData.expenses = [];

        charts.combined.data = {
          cash_flow: cashFlowData.cash_flow,
          expenses: expensesData.expenses
        };

        // Create series for both cash flow and expenses
        Object.keys(seriesConfig).forEach(name => {
          if (name === 'cash_flow' || name === 'expenses') {
            const series = createSeries(chart, charts.combined.settings.chartType, name, seriesConfig[name]);
            if (series) {
              charts.combined.series[name] = series;
            }
          }
        });

        // Set data
        updateCombinedChart(chart);

        // Handle resize
        const resizeObserver = new ResizeObserver((entries) => {
          for (const entry of entries) {
            const { width, height } = entry.contentRect;
            if (width > 0 && height > 0) {
              chart.resize(width, height);
            }
          }
        });
        resizeObserver.observe(containerRect);

        charts.combined.instance = chart;
        charts.combined.resizeObserver = resizeObserver;
      })
      .catch(error => {
        console.error('Error loading combined chart data:', error);
        container.innerHTML = '<p class="text-muted text-center py-5">Chart data failed to load</p>';
      });

    } catch (error) {
      console.error('Error initializing combined chart:', error);
    }
  }

  // Initialize cash flow bar chart
  function initCashFlowBarChart() {
    const container = document.getElementById('cashFlowBarChart');
    const containerRect = document.getElementById('cashFlowBarChartContainer');

    if (!container || !containerRect) {
      setTimeout(initCashFlowBarChart, 100);
