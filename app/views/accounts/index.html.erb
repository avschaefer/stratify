      });

    } catch (error) {
      console.error('Error initializing cash flow bar chart:', error);
    }
  }

  // Update combined chart with time range support
  function updateCombinedChart(chart) {
    const data = charts.combined.data;
    const settings = charts.combined.settings;

    ['cash_flow', 'expenses'].forEach((name) => {
      const series = charts.combined.series[name];
      if (!series) return;

      const isVisible = settings.visibleSeries[name];
      series.applyOptions({ visible: isVisible });

      if (isVisible && data[name] && data[name].length > 0) {
        // Filter data based on time range
        let filteredData = data[name];
        if (settings.timeRange === 'ytd') {
          const currentYear = new Date().getFullYear();
          const yearStart = new Date(currentYear, 0, 1).getTime() / 1000;
          filteredData = data[name].filter(point => point.time >= yearStart);
        }

        const formattedData = filteredData.map(point => ({
          time: point.time,
          value: Number(point.value)
        }));

        series.setData(formattedData);
      }
    });

    if (settings.timeRange === 'home') {
      chart.timeScale().fitContent();
    } else if (settings.timeRange === 'ytd') {
      const currentYear = new Date().getFullYear();
      const yearStart = new Date(currentYear, 0, 1).getTime() / 1000;
      chart.timeScale().setVisibleRange({
        from: yearStart,
        to: Math.floor(Date.now() / 1000)
      });
    } else {
      chart.timeScale().fitContent();
    }
  }

  // Update cash flow bar chart with color coding
  function updateCashFlowBarChart(chart) {
    const data = charts.cashFlowBar.data;
    const settings = charts.cashFlowBar.settings;

    const series = charts.cashFlowBar.series['cash_flow_bar'];
    if (!series) return;

    const isVisible = settings.visibleSeries['cash_flow_bar'];
    series.applyOptions({ visible: isVisible });
    
    if (isVisible && data['cash_flow'] && data['cash_flow'].length > 0) {
      // Filter data based on time range
      let filteredData = data['cash_flow'];
      if (settings.timeRange === 'ytd') {
        const currentYear = new Date().getFullYear();
        const yearStart = new Date(currentYear, 0, 1).getTime() / 1000;
        filteredData = data['cash_flow'].filter(point => point.time >= yearStart);
      }

      // Convert to OHLC format for BarSeries (solid vertical bars)
      // For positive values: open=0, high=value, low=0, close=value
      // For negative values: open=0, high=0, low=value, close=value
      const formattedData = filteredData.map(point => {
        const value = Number(point.value);
        if (value >= 0) {
          return {
            time: point.time,
            open: 0,
            high: value,
            low: 0,
            close: value
          };
        } else {
          return {
            time: point.time,
            open: 0,
            high: 0,
            low: value,
            close: value
          };
        }
      });

      series.setData(formattedData);
    } else {
      series.setData([]);
    }

    if (settings.timeRange === 'home') {
      chart.timeScale().fitContent();
    } else if (settings.timeRange === 'ytd') {
      const currentYear = new Date().getFullYear();
      const yearStart = new Date(currentYear, 0, 1).getTime() / 1000;
      chart.timeScale().setVisibleRange({
        from: yearStart,
        to: Math.floor(Date.now() / 1000)
      });
    } else {
      chart.timeScale().fitContent();
    }
  }

  // Setup control event listeners
  function setupControls() {
    // Series toggle buttons for combined chart
    document.querySelectorAll('.chart-button-toggle[data-series][data-chart-id="combined"]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const chartId = e.target.dataset.chartId;
        const seriesName = e.target.dataset.series;
        const isActive = e.target.classList.contains('active');

        e.target.classList.toggle('active');
        charts[chartId].settings.visibleSeries[seriesName] = !isActive;

        updateCombinedChart(charts.combined.instance);
      });
    });

    // Time range buttons for combined chart
    document.querySelectorAll('.chart-button-toggle[data-time-range][data-chart-id="combined"]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const chartId = e.target.dataset.chartId;
        const timeRange = e.target.dataset.timeRange;
        
        // Remove active from all time range buttons for this chart
        document.querySelectorAll(`.chart-button-toggle[data-time-range][data-chart-id="${chartId}"]`).forEach(b => {
          b.classList.remove('active');
        });
        
        e.target.classList.add('active');
        charts[chartId].settings.timeRange = timeRange;
        
        updateCombinedChart(charts.combined.instance);
      });
    });

    // Time range buttons for cash flow bar chart
    document.querySelectorAll('.chart-button-toggle[data-time-range][data-chart-id="cashFlowBar"]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const chartId = e.target.dataset.chartId;
        const timeRange = e.target.dataset.timeRange;
        
        // Remove active from all time range buttons for this chart
        document.querySelectorAll(`.chart-button-toggle[data-time-range][data-chart-id="${chartId}"]`).forEach(b => {
          b.classList.remove('active');
        });
        
        e.target.classList.add('active');
        charts[chartId].settings.timeRange = timeRange;
        
        updateCashFlowBarChart(charts.cashFlowBar.instance);
      });
    });
  }

  // Cleanup function
  function cleanup() {
    Object.keys(charts).forEach(chartId => {
      const chartData = charts[chartId];
      if (chartData.instance) {
        try {
          chartData.instance.remove();
        } catch (e) {
          console.error('Error removing chart:', e);
        }
        chartData.instance = null;
        chartData.series = {};
      }
      if (chartData.resizeObserver) {
        chartData.resizeObserver.disconnect();
        chartData.resizeObserver = null;
      }
    });
  }

  // Start initialization
  function initAllCharts() {
    if (!window.LightweightCharts) {
      setTimeout(initAllCharts, 100);
      return;
    }
    initCombinedChart();
    initCashFlowBarChart();
    setupControls();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAllCharts);
  } else {
    initAllCharts();
  }

  // Handle Turbo events
  document.addEventListener('turbo:load', function() {
    cleanup();
    setTimeout(initAllCharts, 50);
  });
  document.addEventListener('turbo:before-cache', cleanup);
})();
