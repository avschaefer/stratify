<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <% if @account.persisted? %>
      <h1 class="text-2xl font-bold text-gray-900">Edit Account</h1>
      <p class="text-gray-500 mt-1">Modify your account details.</p>
    <% else %>
      <h1 class="text-2xl font-bold text-gray-900">Add Account</h1>
      <p class="text-gray-500 mt-1">Add a new account to track.</p>
    <% end %>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
    <div class="p-6">
      <%= form_with model: @account, local: true, class: "space-y-6" do |f| %>
        <% if @account.errors.any? %>
          <div class="rounded-xl bg-red-50 p-4 border border-red-100">
            <div class="flex">
              <div class="flex-shrink-0">
                <%= icon('alert_triangle', size: 20, class: 'text-red-400') %>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @account.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-6">
          <div>
            <%= f.label :name, "Account Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "input-standard", required: true, placeholder: "e.g. Chase Sapphire, Emergency Fund" %>
          </div>
          
          <div>
            <%= f.label :account_type, "Account Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :account_type, options_for_select([
              ['Savings', 'savings'],
              ['Checking', 'checking'],
              ['Credit Card', 'credit_card']
            ], @account.account_type), {}, { class: "input-standard" } %>
          </div>

          <div>
            <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :notes, class: "input-standard", rows: 3, placeholder: "Any details you want to remember..." %>
          </div>
        </div>
        
        <div class="pt-4 flex justify-end gap-3 border-t border-gray-100 mt-6">
          <%= link_to "Cancel", accounts_path, class: "btn-secondary" %>
          <%= f.submit @account.persisted? ? "Update Account" : "Add Account", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
