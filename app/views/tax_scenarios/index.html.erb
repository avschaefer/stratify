<div class="page-header d-flex justify-content-between align-items-start mb-4">
  <div>
    <h1>Taxes</h1>
    <p class="text-muted mb-0">Record your tax information by year</p>
  </div>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTaxYearModal">
    <i class="bi bi-plus-circle"></i> New Tax Year
  </button>
</div>

<div class="mb-4">
  <h2 style="font-size: 1.5rem; font-weight: 600; color: #fafafa;">Your Tax Years</h2>
</div>

<div class="row">
  <% if @scenarios.any? %>
    <% @scenarios.each do |scenario| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-glow"></div>
          <!-- Card: Top Section (Details) -->
          <div class="card-body">
            <!-- Card Header: Title & Actions -->
            <div class="d-flex justify-content-between align-items-start mb-4">
              <div>
                <h2 style="font-size: 1.25rem; font-weight: 600; color: #fafafa; margin: 0;">Tax Year <%= scenario.year %></h2>
              </div>
              <!-- Action Buttons -->
              <div class="d-flex gap-1">
                <%= link_to edit_tax_scenario_path(scenario), class: "p-2 rounded", style: "color: #a3a3a3; text-decoration: none; transition: all 0.2s; cursor: pointer;", onmouseover: "this.style.backgroundColor='rgba(255,255,255,0.05)'; this.style.color='#e5e5e5';", onmouseout: "this.style.backgroundColor='transparent'; this.style.color='#a3a3a3';" do %>
                  <svg style="width: 20px; height: 20px; pointer-events: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                    <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <% confirm_message = "Are you sure you want to delete this tax year?" %>
                <%= button_to tax_scenario_path(scenario),
                    method: :delete,
                    class: "p-2 rounded",
                    style: "background: none; border: none; color: #a3a3a3; transition: all 0.2s; cursor: pointer;",
                    onmouseover: "this.style.backgroundColor='rgba(239,68,68,0.1)'; this.style.color='#fca5a5';",
                    onmouseout: "this.style.backgroundColor='transparent'; this.style.color='#a3a3a3';",
                    aria: { label: "Delete tax year" },
                    title: "Delete tax year",
                    data: { turbo_confirm: confirm_message } do %>
                  <svg style="width: 20px; height: 20px; pointer-events: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </div>

            <!-- Details List -->
            <div>
              <div class="d-flex justify-content-between mb-3">
                <span style="font-size: 0.875rem; color: #a3a3a3;">Annual Income</span>
                <span style="font-size: 0.875rem; font-weight: 500; color: #fafafa;">$<%= number_with_delimiter((scenario.income rescue 0).round(0)) %></span>
              </div>
              <div class="d-flex justify-content-between mb-3">
                <span style="font-size: 0.875rem; color: #a3a3a3;">Deductions</span>
                <span style="font-size: 0.875rem; font-weight: 500; color: #fafafa;">$<%= number_with_delimiter((scenario.deductions rescue 0).round(0)) %></span>
              </div>
              <div class="d-flex justify-content-between mb-3">
                <span style="font-size: 0.875rem; color: #a3a3a3;">Taxable Income</span>
                <span style="font-size: 0.875rem; font-weight: 500; color: #fafafa;">$<%= number_with_delimiter((scenario.taxable_income rescue 0).round(0)) %></span>
              </div>
              <div class="d-flex justify-content-between mb-3">
                <span style="font-size: 0.875rem; color: #a3a3a3;">Tax Paid</span>
                <span style="font-size: 0.875rem; font-weight: 500; color: #fafafa;">$<%= number_with_delimiter((scenario.tax_paid rescue 0).round(0)) %></span>
              </div>
              <% if scenario.refund.to_f > 0 %>
                <div class="d-flex justify-content-between">
                  <span style="font-size: 0.875rem; color: #a3a3a3;">Refund</span>
                  <span style="font-size: 0.875rem; font-weight: 500; color: #6ee7b7;">$<%= number_with_delimiter((scenario.refund rescue 0).round(0)) %></span>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Card: Bottom Section (Summary) -->
          <div class="card-header" style="border-top: 1px solid rgba(255, 255, 255, 0.1);">
            <div>
              <!-- Highlighted After-Tax Income -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span style="font-size: 1.125rem; font-weight: 600; color: #e5e5e5;">After-Tax Income</span>
                <span style="font-size: 1.25rem; font-weight: 700; color: #fafafa;">$<%= number_with_delimiter((scenario.after_tax_income rescue 0).round(0)) %></span>
              </div>
              <% if scenario.notes.present? %>
                <div style="padding-top: 1rem; border-top: 1px solid rgba(255, 255, 255, 0.1);">
                  <span style="font-size: 0.875rem; font-weight: 600; color: #e5e5e5;">Notes</span>
                  <p style="font-size: 0.875rem; color: #d4d4d4; margin: 0.25rem 0 0;"><%= scenario.notes %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <p class="text-muted text-center py-5">No tax years saved yet. Click "New Tax Year" to get started.</p>
    </div>
  <% end %>
</div>

<!-- New Tax Year Modal -->
<div class="modal fade" id="newTaxYearModal" tabindex="-1" aria-labelledby="newTaxYearModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTaxYearModalLabel">New Tax Year</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @scenario, local: true do |f| %>
          <% if @scenario.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @scenario.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :name, "Name", class: "form-label" %>
                <%= f.text_field :name, class: "form-control", required: true, placeholder: "e.g., Tax Year 2024" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :year, "Year", class: "form-label" %>
                <%= f.number_field :year, value: Date.today.year, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :income, "Annual Income", class: "form-label" %>
                <%= f.number_field :income, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.label :deductions, "Deductions", class: "form-label" %>
                <%= f.number_field :deductions, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :taxable_income, "Taxable Income", class: "form-label" %>
                <%= f.number_field :taxable_income, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :tax_paid, "Tax Paid", class: "form-label" %>
                <%= f.number_field :tax_paid, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <%= f.label :refund, "Refund", class: "form-label" %>
                <%= f.number_field :refund, step: 0.01, value: 0, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <%= f.label :notes, "Notes (optional)", class: "form-label" %>
                <%= f.text_area :notes, class: "form-control", rows: 2 %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Save Year", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
